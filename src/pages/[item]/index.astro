---
import Layout from '@layouts/main.astro';
import { MockData, type Item } from '@models/item';

export async function getStaticPaths() {
  return MockData.map((product: Item) => ({
    params: { item: product.id },
    props: { product }
  }));
}

const { product } = Astro.props;

const pageContent = {
  title: "Bamazon"
};
---

<Layout content={pageContent}>
  <div class="w-full bg-gray-50 min-h-screen">
    <nav class="bg-white border-b border-gray-200 py-4">
      <div class="mx-auto max-w-7xl px-8">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li><a href="/" class="hover:text-purple-600">ホーム</a></li>
          <li>/</li>
          <li class="text-gray-900">{product.title}</li>
        </ol>
      </div>
    </nav>

    <section class="py-16">
      <div class="mx-auto max-w-7xl px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div class="bg-white rounded-lg p-8 shadow-sm">
            <img
              src={product.image}
              alt={product.title}
              class="w-full h-96 object-contain"
            />
          </div>
          <div class="space-y-6">
            <div>
              <h1 class="text-3xl font-bold text-gray-900 mb-4">
                {product.title}
              </h1>
              <div class="flex items-center space-x-2 mb-4">
                <div class="flex items-center">
                  {Array.from({ length: Math.floor(product.rating) }, (_, i) => (
                    <svg class="w-5 h-5 text-yellow-300" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"></path>
                    </svg>
                  ))}
                  {Array.from({ length: 5 - Math.floor(product.rating) }, (_, i) => (
                    <svg class="w-5 h-5 text-gray-200" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"></path>
                    </svg>
                  ))}
                </div>
                <span class="text-gray-600">({product.rating})</span>
              </div>
              <div class="text-4xl mb-6 font-bold text-gray-900">{product.price}</div>
              <div class="prose mb-8">
                <p class="text-gray-600 text-lg">
                  {product.description || "高品質な商品をお手頃価格でご提供します。"}
                </p>
              </div>
              <button class="flex-1 bg-blue-700 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-800 transition-colors duration-200">
                カートに追加
              </button>
              <div class="border-t pt-6 mt-8">
                <h3 class="text-lg font-semibold mb-4">商品詳細</h3>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">商品ID:</span>
                    <span>{product.id}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">カテゴリ:</span>
                    <span>{product.category || "電子機器"}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">在庫状況:</span>
                    <span class="text-green-600">在庫あり</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>